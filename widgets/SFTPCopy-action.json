{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "SFTPCopy Action Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host"
        },
        {
          "widget-type": "textbox",
          "label": "Port",
          "name": "port"
        },
        {
          "widget-type": "textbox",
          "label": "User name",
          "name": "userName"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "Source directory",
          "name": "srcDirectory"
        },
        {
          "widget-type": "textbox",
          "label": "Destination directory",
          "name": "destDirectory"
        },

        {
          "widget-type": "content-filter",
          "label": "Enable proxy support",
          "name": "enableProxy",
          "widget-attributes": {
            "default": "false",
            "options": [
              "true",
              "false"
            ]
          }
        },

        {
          "widget-type": "textbox",
          "label": "Proxy server host",
          "name": "proxyHost",
          "widget-attributes": {
            "filters": [{
              "widget-name": "enableProxy",
              "filter-values": [
                "true"
              ]
            }]
          }
        },

        {
          "widget-type": "textbox",
          "label": "Username for proxy server",
          "name": "proxyUsername",
          "widget-attributes": {
            "filters": [{
              "widget-name": "enableProxy",
              "filter-values": [
                "true"
              ]
            }]
          }
        },
        {
          "widget-type": "password",
          "label": "Password for proxy server",
          "name": "proxyPassword",
          "widget-attributes": {
            "filters": [{
              "widget-name": "enableProxy",
              "filter-values": [
                "true"
              ]
            }]
          }
        },

        {
          "widget-type": "select",
          "label": "Uncompress",
          "name": "extractZipFiles",
          "widget-attributes": {
            "values": [
              "true",
              "false"
            ],
            "default": "true"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Variable name to hold list of copied file names",
          "name": "variableNameHoldingFileList",
          "widget-attributes": {
            "default": "sftp.copied.file.names"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Regex to match files that needs to be copied",
          "name" : "fileNameRegex"
        },
        {
          "widget-type": "keyvalue",
          "label": "Properties for SSH",
          "name": "sshProperties",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "key",
            "value-placeholder": "value"
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Properties for File System",
          "name": "fileSystemProperties",
          "widget-attributes": {
            "kv-delimiter": "=>",
            "showDelimiter": "false",
            "key-placeholder": "key",
            "value-placeholder": "value"
          }
        }
      ]
    }
  ],
  "outputs": [
        ]
      }
